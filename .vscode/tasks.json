{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "neuralcpp Docker Build",
        "type": "shell",
        "command": "docker",
        "args": [
          "run",
          "--rm",
          "-v",
          "${workspaceFolder}:/root/neuralcpp",
          "neuralcpp-env",
          "/bin/bash",
          "-c",
          "cd /root/neuralcpp && cd build && cmake .. && make && ./sources/driver/neuralcpp"
        ],
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  